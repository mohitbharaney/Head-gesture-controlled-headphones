<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume Up"
        android:id="@+id/VolumeUp"
        android:onClick="VolumeUp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume Down"
        android:id="@+id/VolumeDown"
        android:layout_alignTop="@+id/VolumeUp"
        android:layout_alignParentEnd="true"
        android:onClick="VolumeDown"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/play"
        android:layout_alignBaseline="@+id/pause"
        android:layout_alignBottom="@+id/pause"
        android:layout_alignParentStart="true"
        android:onClick="Play"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pause"
        android:id="@+id/pause"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:onClick="Pause"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BluetoothConnect"
        android:id="@+id/BtConnect"
        android:layout_below="@+id/pause"
        android:layout_centerHorizontal="true"
        android:onClick="EstablishBtConnect"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth Close"
        android:id="@+id/BtClose"
        android:layout_below="@+id/BtConnect"
        android:layout_alignStart="@+id/BtConnect"
        android:layout_marginTop="64dp"
        android:onClick="CloseBtConnect"/>

</RelativeLayout>
